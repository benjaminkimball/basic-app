{
  "private": true,
  "name": "basic-app",
  "version": "0.0.0",
  "description": "A cloneable template for bootstrapping Next.js projects.",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "format": "prettier --write 'app/**/*'",
    "lint": "next lint && stylelint 'app/**/*.css'",
    "prepush": "npm run types:check && npm run format && npm run lint && npm test",
    "start": "next start",
    "test": "jest --passWithNoTests",
    "test:coverage": "npm test -- --coverage",
    "test:watch": "npm test -- --watch",
    "types:check": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benjaminkimball/basic-app.git"
  },
  "author": "Benjamin Kimball <hello@benjaminkimball.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benjaminkimball/basic-app/issues"
  },
  "homepage": "https://github.com/benjaminkimball/basic-app#readme",
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "volta": {
    "node": "20.11.0",
    "npm": "10.3.0"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.14",
    "@heroicons/react": "^2.0.17",
    "next": "^14.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^20.8.4",
    "@types/react": "^18.0.38",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.39.0",
    "eslint-config-next": "^14.0.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "postcss": "^8.4.23",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.5",
    "stylelint": "^16.1.0",
    "stylelint-config-recommended": "^14.0.0",
    "tailwindcss": "^3.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
