{
  "private": true,
  "name": "basic-app",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "format": "prettier --write '{components,lib,pages,scripts,styles}/**/*'",
    "lint": "next lint && stylelint 'styles/**/*.css'",
    "prepush": "pnpm types && pnpm format && pnpm lint && pnpm test",
    "start": "next start",
    "test": "jest --passWithNoTests",
    "test:coverage": "pnpm test -- --coverage",
    "test:watch": "pnpm test -- --watch",
    "ts-node": "ts-node --compiler-options '{\"module\":\"commonjs\"}' --transpile-only",
    "types": "pnpm types:server && pnpm types:client && pnpm types:check",
    "types:check": "tsc",
    "types:client": "graphql-codegen --config .graphqlrc.yaml",
    "types:server": "pnpm ts-node scripts/generateGraphQLServerTypes.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benjaminkimball/basic-app.git"
  },
  "contributors": [
    "Benjamin Kimball <hello@benjaminkimball.com>"
  ],
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/benjaminkimball/basic-app/issues"
  },
  "homepage": "https://github.com/benjaminkimball/basic-app#readme",
  "engines": {
    "node": "14.x"
  },
  "dependencies": {
    "@apollo/client": "^3.6.2",
    "@headlessui/react": "^1.6.1",
    "@heroicons/react": "^1.0.6",
    "apollo-server-micro": "^3.7.0",
    "graphql": "^16.5.0",
    "graphql-scalars": "^1.17.0",
    "graphql-tag": "^2.12.6",
    "micro": "^9.3.4",
    "next": "^12.1.6",
    "nexus": "^1.3.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.4.11",
    "@graphql-codegen/typescript-operations": "^2.4.0",
    "@graphql-codegen/typescript-react-apollo": "^3.2.14",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.32",
    "@types/react": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.15.0",
    "eslint-config-next": "^12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-security": "^1.5.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "postcss": "^8.4.13",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.10",
    "stylelint": "^14.8.2",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^7.0.0",
    "tailwindcss": "^3.0.24",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
